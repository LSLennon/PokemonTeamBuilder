@inject BuildDatabase Builder
@page "/PokeBase"

<MudButton Variant="Variant.Filled"
           Color="Color.Primary"
           OnClick="AddAbilitiesTooDatabase">
    Add Abilities
</MudButton>
<MudButton Variant="Variant.Filled"
           Color="Color.Primary"
           OnClick="AddMovesTooDatabase">
    Add Moves
</MudButton>
<MudButton Variant="Variant.Filled"
           Color="Color.Primary"
           OnClick="FormatFile">
    Format File
</MudButton>



@code {
    private async Task AddAbilitiesTooDatabase()
    {
        await Builder.AddAbilities();
    }

    private async Task AddMovesTooDatabase()
    {
        await Builder.AddMoveNames();
    }

    private void FormatFile()
    {
        Builder.formatList();
    }
}