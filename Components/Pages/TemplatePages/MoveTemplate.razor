<MudPaper Class="@($"object-scale-down ma-4 pa-2 border-solid border-2 mud-border-grey-lighten-5")"
          Style="@($"max-width: 230px; max-height: 75px; text-align: center; background-image: url('/images/{Move.PokeMove.MoveType.PokeTypeName}.png'); background-size: cover; background-position: center;")">
    <MudItem xs="12">
        <MudText Style="font-size: 1rem; color: white; text-shadow: 1px 1px 2px black, 0 0 25px black, 0 0 5px darkgrey;" Align="Align.Center">@Move.PokeMove.MoveName</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudItem xs="12">
            <MudGrid Class="align-content-center justify-center" Style="gap: 0.2rem;">
                <MudItem xs="3">
                    <MudText Style="@TextStyle">Power</MudText>
                    <MudText Style="@TextStyle">@(Move.PokeMove.Power != null ? Move.PokeMove.Power.ToString() : "---")</MudText>
                </MudItem>
                <MudItem xs="3">
                    <MudText Style="@TextStyle">Acc</MudText>
                    <MudText Style="@TextStyle">@(Move.PokeMove.Accuracy != null ? Move.PokeMove.Accuracy.ToString() : "-")%</MudText>
                </MudItem>
                <MudItem xs="3">
                    <MudText Style="@TextStyle">PP</MudText>
                    <MudText Style="@TextStyle">@Move.PokeMove.PP</MudText>
                </MudItem>
            </MudGrid>
        </MudItem>
    </MudItem>
</MudPaper>




@code {
    // This component is used to display moves when a user picks them, it is customised based on the type of the move
    [Parameter]
    public MPokemonToMoves Move { get; set; }

    public string TextStyle = "font-size: .8rem; color: white; text-shadow: 1px 1px 2px black, 0 0 25px black, 0 0 5px darkgrey;";
}
